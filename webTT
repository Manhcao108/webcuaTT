              Liên hệ ngay với người bán
            </button>
            <p class="contact-sub">
              Gợi ý: chỉnh nút này mở Facebook, Zalo hoặc link thanh toán của bạn.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ===== JS ===== -->
  <script>
    // Cấu hình link liên hệ chính (được dùng khi bấm nút "Liên hệ ngay với người bán" trong modal)
    const CONTACT_URL = "https://zalo.me/"; // TODO: đổi sang link thật (FB / Zalo / form...)

    const productModalBackdrop = document.getElementById("productModalBackdrop");
    const modalTitle = document.getElementById("modalTitle");
    const modalPrice = document.getElementById("modalPrice");
    const modalDesc = document.getElementById("modalDesc");
    const modalMainImage = document.getElementById("modalMainImage");
    const thumbRow = document.getElementById("thumbRow");
    const modalCloseBtn = document.getElementById("modalCloseBtn");
    const contactBtn = document.getElementById("contactBtn");

    let currentImages = [];

    function openModalFromCard(card) {
      const name = card.dataset.name || "";
      const price = card.dataset.price || "";
      const desc = card.dataset.desc || "";
      const images = (() => {
        try {
          return JSON.parse(card.dataset.images || "[]");
        } catch (e) {
          return [];
        }
      })();

      currentImages = images.length ? images : [card.querySelector("img").src];

      modalTitle.textContent = name;
      modalPrice.textContent = price;
      modalDesc.textContent = desc;
      modalMainImage.src = currentImages[0] || "";
      renderThumbs(currentImages);

      productModalBackdrop.classList.add("show");
    }

    function renderThumbs(images) {
      thumbRow.innerHTML = "";
      images.forEach((src, index) => {
        const div = document.createElement("div");
        div.className = "thumb" + (index === 0 ? " active" : "");
        div.innerHTML = `<img src="${src}" alt="thumb" />`;
        div.addEventListener("click", () => {
          modalMainImage.src = src;
          document
            .querySelectorAll(".thumb")
            .forEach((t) => t.classList.remove("active"));
          div.classList.add("active");
        });
        thumbRow.appendChild(div);
      });
    }

    function closeModal() {
      productModalBackdrop.classList.remove("show");
    }

    // Gán event cho từng product-card
    document.querySelectorAll(".product-card").forEach((card) => {
      card.addEventListener("click", () => openModalFromCard(card));
    });

    // Đóng modal khi click nút X
    modalCloseBtn.addEventListener("click", closeModal);

    // Đóng modal khi click ra ngoài vùng modal
    productModalBackdrop.addEventListener("click", (e) => {
      if (e.target === productModalBackdrop) {
        closeModal();
      }
    });

    // Nút liên hệ
    contactBtn.addEventListener("click", () => {
      window.open(CONTACT_URL, "_blank");
    });

    // Hỗ trợ phím Esc đóng modal
    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        closeModal();
      }
    });
  </script>
</body>
</html>
